<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_foreground"
                tools:srcCompat="@tools:sample/avatars"
                android:contentDescription="TODO" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_userid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3sp"
                    android:layout_marginTop="20sp"
                    android:text="@string/account_guest_id"
                    android:textAlignment="textStart"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7sp"
                    android:layout_marginLeft="3sp"
                    android:inputType="textPersonName"
                    android:text="@string/account_guest_name" />
            </LinearLayout>

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/account_login"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_favorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/account_favorites"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/account_history"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/account_credit"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        android:visibility="visible" />

</LinearLayout>