<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5sp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="5sp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp">

    <TextView
        android:id="@+id/article_title"
        android:text="How students develop software together:A case of study"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/article_authors"
        android:text="James.P.Paul, Harris.S.Johnson, Peter.K.Greenwood"
        android:layout_below="@id/article_title"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/article_date_submit"
        android:text="Submitted: 10/31/2019"
        android:layout_below="@id/article_authors"
        android:textSize="18sp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/article_id"
        android:text="ID: 1910.15982v3"
        android:layout_below="@id/article_date_submit"
        android:textSize="18sp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/article_type"
        android:text="cs.SE, cs.ML"
        android:textColor="#5500FF"
        android:layout_below="@id/article_id"
        android:textSize="18sp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/article_line"
        android:layout_below="@id/article_type"
        android:layout_width="450sp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="#6F6C6C" />
    <TextView
        android:id="@+id/article_abstract"
        android:text="Recent years, there is a rising interest on studying how students do their projects in a team."
        android:textColor="#000000"
        android:layout_below="@id/article_line"
        android:textSize="18sp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp" />

</RelativeLayout>

</androidx.cardview.widget.CardView>
